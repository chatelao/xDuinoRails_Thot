<?xml version="1.0" encoding="UTF-8"?>
<signalDefinitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="signals.xsd">
  <!-- H/V System -->
  <signal country="de" name="DE-HV-Hauptsignal-1" svg="DE-HV-Hauptsignal-1.svg" outline="M -350,400 L -250,500 L 250,500 L 350,400 L 350,-1100 L -350,-1100 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="230" color="green" d="m -70, 0 a 70,70 0 1,0 140,0 a 70,70 0 1,0 -140,0"/>
      <lightbulb id="L2_Left" x="-120" y="0" color="red" d="m -70, 0 a 70,70 0 1,0 140,0 a 70,70 0 1,0 -140,0"/>
      <lightbulb id="L2_Right" x="120" y="0" color="red" d="m -70, 0 a 70,70 0 1,0 140,0 a 70,70 0 1,0 -140,0"/>
      <lightbulb id="L3" x="0" y="-810" color="yellow" d="m -70, 0 a 70,70 0 1,0 140,0 a 70,70 0 1,0 -140,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Hp 0" short="Hp0" long="Halt">
        <light id="L2_Left"/>
        <light id="L2_Right"/>
      </aspect>
      <aspect name="Hp 1" short="Hp1" long="Fahrt">
        <light id="L1"/>
      </aspect>
      <aspect name="Hp 2" short="Hp2" long="Langsamfahrt">
        <light id="L1"/>
        <light id="L3"/>
      </aspect>
    </aspects>
  </signal>

  <signal country="de" name="DE-HV-Zwergsignal-1" svg="DE-HV-Zwergsignal-1.svg" outline="M -200,200 L 200,200 L 200,-200 L -200,-200 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1_RED" x="-100" y="0" color="red" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L2_RED" x="100" y="0" color="red" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L3_WHITE" x="-100" y="-100" color="white" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L4_WHITE" x="100" y="100" color="white" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Sh 0" short="Sh0" long="Halt / Fahrverbot">
        <light id="L1_RED"/>
        <light id="L2_RED"/>
      </aspect>
      <aspect name="Sh 1" short="Sh1" long="Fahrverbot aufgehoben">
        <light id="L3_WHITE"/>
        <light id="L4_WHITE"/>
      </aspect>
    </aspects>
  </signal>

  <signal country="de" name="DE-HV-Vorsignal-1" svg="DE-HV-Vorsignal-1.svg" outline="M -400,-400 L -400,0 L 0,400 L 400,400 L 400,0 L 0,-400 Z" outlineColor="#000000">
    <lightbulbs>
      <!-- Top Right Position: Can show Yellow or Green -->
      <lightbulb id="L_TR_Y" x="250" y="250" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L_TR_G" x="250" y="250" color="green" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>

      <!-- Bottom Left Position: Can show Yellow or Green -->
      <lightbulb id="L_BL_Y" x="-250" y="-250" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L_BL_G" x="-250" y="-250" color="green" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Vr 0" short="Vr0" long="Halt erwarten">
        <!-- Two Yellows rising diagonal (/) -->
        <light id="L_BL_Y"/>
        <light id="L_TR_Y"/>
      </aspect>
      <aspect name="Vr 1" short="Vr1" long="Fahrt erwarten">
        <!-- Two Greens rising diagonal (/) -->
        <light id="L_BL_G"/>
        <light id="L_TR_G"/>
      </aspect>
      <aspect name="Vr 2" short="Vr2" long="Langsamfahrt erwarten">
        <!-- Green/Yellow rising diagonal (/) -->
        <!-- Usually Yellow (Bottom Left) + Green (Top Right) -->
        <light id="L_BL_Y"/>
        <light id="L_TR_G"/>
      </aspect>
    </aspects>
  </signal>

  <!-- Ks System -->
  <signal country="de" name="DE-KS-Signal" svg="DE-KS-Signal.svg" outline="M -350,750 L 350,750 L 350,-750 L -350,-750 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="500" color="green" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L2" x="0" y="0" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L3" x="0" y="-500" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <!-- Sh 1 / Kennlicht optics: Rising Diagonal between Red and Yellow gap -->
      <lightbulb id="L4" x="-80" y="-330" color="white" d="m -60, 0 a 60,60 0 1,0 120,0 a 60,60 0 1,0 -120,0"/>
      <lightbulb id="L5" x="80" y="-170" color="white" d="m -60, 0 a 60,60 0 1,0 120,0 a 60,60 0 1,0 -120,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Hp 0" short="Hp0" long="Halt">
        <light id="L2"/>
      </aspect>
      <aspect name="Ks 1" short="Ks1" long="Fahrt / Fahrt erwarten">
        <light id="L1"/>
      </aspect>
      <aspect name="Ks 2" short="Ks2" long="Halt erwarten">
        <light id="L3"/>
      </aspect>
       <aspect name="Sh 1" short="Sh1" long="Fahrverbot aufgehoben">
        <light id="L4"/>
        <light id="L5"/>
      </aspect>
    </aspects>
  </signal>

  <!-- Hl System (Simplified) -->
  <signal country="de" name="DE-HL-Signal" svg="DE-HL-Signal.svg" outline="M -350,1000 L 350,1000 L 350,-1000 L -350,-1000 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="750" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L2" x="0" y="250" color="green" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L3" x="0" y="-250" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L4" x="0" y="-750" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <!-- Light Strips for Speed Indication. Green=100km/h, Yellow=60km/h -->
      <lightbulb id="L5" x="0" y="-900" color="green" d="M -150,-30 L 150,-30 L 150,30 L -150,30 Z"/>
      <lightbulb id="L6" x="0" y="-900" color="yellow" d="M -150,-30 L 150,-30 L 150,30 L -150,30 Z"/>
    </lightbulbs>
    <aspects>
      <aspect name="Hl 13" short="Hl13" long="Halt"> <!-- Stop -->
        <light id="L3"/>
      </aspect>
      <aspect name="Hl 1" short="Hl1" long="Fahrt"> <!-- Clear -->
        <light id="L2"/>
      </aspect>
      <aspect name="Hl 10" short="Hl10" long="Halt erwarten"> <!-- Expect Stop -->
        <light id="L1"/>
      </aspect>
      <aspect name="Hl 9a" short="Hl9a" long="Fahrt 40 km/h"> <!-- 40 + Expect 40/60 -->
        <light id="L1"/>
      </aspect>
      <aspect name="Hl 9b" short="Hl9b" long="Fahrt 60 km/h"> <!-- 60 + Expect 40/60 -->
        <light id="L1"/>
        <light id="L6"/>
      </aspect>
      <aspect name="Hl 12a" short="Hl12a" long="Fahrt 40 km/h, Halt erwarten"> <!-- 40 + Expect Stop -->
        <light id="L1"/>
        <light id="L4"/>
      </aspect>
       <aspect name="Hl 12b" short="Hl12b" long="Fahrt 60 km/h, Halt erwarten"> <!-- 60 + Expect Stop -->
        <light id="L1"/>
        <light id="L6"/>
      </aspect>
    </aspects>
  </signal>

  <!-- Sv System (Hamburg/Berlin S-Bahn) -->
  <signal country="de" name="DE-SV-Signal" svg="DE-SV-Signal.svg" outline="M -250,150 L 250,150 L 250,-150 L -250,-150 Z" outlineColor="#000000">
    <lightbulbs>
      <!-- Left Position -->
      <lightbulb id="L_Left_R" x="-150" y="0" color="red" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L_Left_G" x="-150" y="0" color="green" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L_Left_Y" x="-150" y="0" color="yellow" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>

      <!-- Right Position -->
      <lightbulb id="L_Right_R" x="150" y="0" color="red" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L_Right_G" x="150" y="0" color="green" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L_Right_Y" x="150" y="0" color="yellow" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Sv 0" short="Sv0" long="Halt"> <!-- Stop: Red + Red -->
        <light id="L_Left_R"/>
        <light id="L_Right_R"/>
      </aspect>
      <aspect name="Sv 1" short="Sv1" long="Fahrt"> <!-- Go: Green + Green -->
        <light id="L_Left_G"/>
        <light id="L_Right_G"/>
      </aspect>
      <aspect name="Sv 2" short="Sv2" long="Fahrt, Halt erwarten"> <!-- Go, Expect Stop: Green + Yellow -->
        <light id="L_Left_G"/>
        <light id="L_Right_Y"/>
      </aspect>
    </aspects>
  </signal>

  <!-- Bü Signals (Level Crossing) -->
  <signal country="de" name="DE-BUE-Signal" svg="DE-BUE-Signal.svg" outline="M -250,300 L 250,300 L 250,-100 L -250,-100 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1_Yellow" x="-150" y="0" color="yellow" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L2_Yellow" x="150" y="0" color="yellow" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L3_White" x="0" y="200" color="white" d="m -60, 0 a 60,60 0 1,0 120,0 a 60,60 0 1,0 -120,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Bü 0" short="Bue0" long="Halt vor dem Bahnübergang"> <!-- Stop (Light Variant: 2 Horizontal Yellows) -->
        <light id="L1_Yellow"/>
        <light id="L2_Yellow"/>
      </aspect>
      <aspect name="Bü 1" short="Bue1" long="Bahnübergang befahrbar"> <!-- Go (Flashing White usually) -->
        <light id="L3_White"/>
      </aspect>
    </aspects>
  </signal>

  <!-- Zs Signals (Additional) -->
  <signal country="de" name="DE-ZS-Signal" svg="DE-ZS-Signal.svg" outline="M -200,200 L 200,200 L 200,-200 L -200,-200 Z" outlineColor="#000000">
    <lightbulbs>
      <!-- Zs 1 (White A) -->
      <lightbulb id="L_Zs1_Top" x="0" y="100" color="white" d="m -40, 0 a 40,40 0 1,0 80,0 a 40,40 0 1,0 -80,0"/>
      <lightbulb id="L_Zs1_BL" x="-80" y="-80" color="white" d="m -40, 0 a 40,40 0 1,0 80,0 a 40,40 0 1,0 -80,0"/>
      <lightbulb id="L_Zs1_BR" x="80" y="-80" color="white" d="m -40, 0 a 40,40 0 1,0 80,0 a 40,40 0 1,0 -80,0"/>

      <!-- Zs 7 (Yellow V) -->
      <lightbulb id="L_Zs7_TL" x="-80" y="80" color="yellow" d="m -40, 0 a 40,40 0 1,0 80,0 a 40,40 0 1,0 -80,0"/>
      <lightbulb id="L_Zs7_TR" x="80" y="80" color="yellow" d="m -40, 0 a 40,40 0 1,0 80,0 a 40,40 0 1,0 -80,0"/>
      <lightbulb id="L_Zs7_Bot" x="0" y="-100" color="yellow" d="m -40, 0 a 40,40 0 1,0 80,0 a 40,40 0 1,0 -80,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Zs 1" short="Zs1" long="Ersatzsignal">
        <light id="L_Zs1_Top"/>
        <light id="L_Zs1_BL"/>
        <light id="L_Zs1_BR"/>
      </aspect>
      <aspect name="Zs 7" short="Zs7" long="Gegengleisfahrt-Ersatzsignal">
        <light id="L_Zs7_TL"/>
        <light id="L_Zs7_TR"/>
        <light id="L_Zs7_Bot"/>
      </aspect>
    </aspects>
  </signal>
</signalDefinitions>
