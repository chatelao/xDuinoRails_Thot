<?xml version="1.0" encoding="UTF-8"?>
<signalDefinitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="signals.xsd">
  <!-- H/V System -->
  <signal country="de" name="DE-HV-Hauptsignal-1" svg="DE-HV-Hauptsignal-1.svg" outline="M -350,750 L 350,750 L 350,-750 L -350,-750 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="500" color="green" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L2" x="0" y="0" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L3" x="0" y="-500" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Hp 0">
        <light id="L2"/>
      </aspect>
      <aspect name="Hp 1">
        <light id="L1"/>
      </aspect>
      <aspect name="Hp 2">
        <light id="L1"/>
        <light id="L3"/>
      </aspect>
    </aspects>
  </signal>

  <signal country="de" name="DE-HV-Zwergsignal-1" svg="DE-HV-Zwergsignal-1.svg" outline="M -200,200 L 200,200 L 200,-200 L -200,-200 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1_RED" x="-100" y="0" color="red" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L2_RED" x="100" y="0" color="red" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L3_WHITE" x="-100" y="-100" color="white" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
      <lightbulb id="L4_WHITE" x="100" y="100" color="white" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Sh 0">
        <light id="L1_RED"/>
        <light id="L2_RED"/>
      </aspect>
      <aspect name="Sh 1">
        <light id="L3_WHITE"/>
        <light id="L4_WHITE"/>
      </aspect>
    </aspects>
  </signal>

  <signal country="de" name="DE-HV-Vorsignal-1" svg="DE-HV-Vorsignal-1.svg" outline="M -400,400 L 400,400 L 400,-400 L -400,-400 Z" outlineColor="#000000">
    <lightbulbs>
      <!-- Top Right Position: Can show Yellow or Green -->
      <lightbulb id="L_TR_Y" x="250" y="250" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L_TR_G" x="250" y="250" color="green" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>

      <!-- Bottom Left Position: Can show Yellow or Green -->
      <lightbulb id="L_BL_Y" x="-250" y="-250" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L_BL_G" x="-250" y="-250" color="green" d="m -80, 0 a 80,80 0 1,0 160,0 a 80,80 0 1,0 -160,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Vr 0">
        <!-- Two Yellows rising diagonal (/) -->
        <light id="L_BL_Y"/>
        <light id="L_TR_Y"/>
      </aspect>
      <aspect name="Vr 1">
        <!-- Two Greens rising diagonal (/) -->
        <light id="L_BL_G"/>
        <light id="L_TR_G"/>
      </aspect>
      <aspect name="Vr 2">
        <!-- Green/Yellow rising diagonal (/) -->
        <!-- Usually Yellow (Bottom Left) + Green (Top Right) -->
        <light id="L_BL_Y"/>
        <light id="L_TR_G"/>
      </aspect>
    </aspects>
  </signal>

  <!-- Ks System -->
  <signal country="de" name="DE-KS-Signal" svg="DE-KS-Signal.svg" outline="M -350,750 L 350,750 L 350,-750 L -350,-750 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="500" color="green" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L2" x="0" y="0" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L3" x="0" y="-500" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <!-- Sh 1 / Kennlicht optics: Rising Diagonal between Red and Yellow gap -->
      <lightbulb id="L4" x="-80" y="-330" color="white" d="m -60, 0 a 60,60 0 1,0 120,0 a 60,60 0 1,0 -120,0"/>
      <lightbulb id="L5" x="80" y="-170" color="white" d="m -60, 0 a 60,60 0 1,0 120,0 a 60,60 0 1,0 -120,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Hp 0">
        <light id="L2"/>
      </aspect>
      <aspect name="Ks 1">
        <light id="L1"/>
      </aspect>
      <aspect name="Ks 2">
        <light id="L3"/>
      </aspect>
       <aspect name="Sh 1">
        <light id="L4"/>
        <light id="L5"/>
      </aspect>
    </aspects>
  </signal>

  <!-- Hl System (Simplified) -->
  <signal country="de" name="DE-HL-Signal" svg="DE-HL-Signal.svg" outline="M -350,1000 L 350,1000 L 350,-1000 L -350,-1000 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="750" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L2" x="0" y="250" color="green" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L3" x="0" y="-250" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L4" x="0" y="-750" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <!-- Light Strips for Speed Indication -->
      <lightbulb id="L5" x="0" y="-900" color="green" d="M -150,-30 L 150,-30 L 150,30 L -150,30 Z"/>
      <lightbulb id="L6" x="0" y="-900" color="yellow" d="M -150,-30 L 150,-30 L 150,30 L -150,30 Z"/>
    </lightbulbs>
    <aspects>
      <aspect name="Hl 13"> <!-- Stop -->
        <light id="L3"/>
      </aspect>
      <aspect name="Hl 1"> <!-- Clear -->
        <light id="L2"/>
      </aspect>
      <aspect name="Hl 10"> <!-- Expect Stop -->
        <light id="L1"/>
      </aspect>
      <aspect name="Hl 9a"> <!-- 40 + Expect 40/60 -->
        <light id="L1"/>
        <light id="L6"/>
      </aspect>
      <aspect name="Hl 9b"> <!-- 60 + Expect 40/60 -->
        <light id="L1"/>
        <light id="L5"/>
      </aspect>
      <aspect name="Hl 12a"> <!-- 40 + Expect Stop -->
        <light id="L1"/>
        <light id="L4"/>
      </aspect>
       <aspect name="Hl 12b"> <!-- 60 + Expect Stop -->
        <light id="L1"/>
        <light id="L5"/>
      </aspect>
    </aspects>
  </signal>
</signalDefinitions>
