      <lightbulb id="L2" x="0" y="0" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L3" x="0" y="-500" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Halt" short="Halt" long="Halt">
        <light id="L2"/>
      </aspect>
      <aspect name="Freie Fahrt" short="Fb1" long="Fahrbegriff 1"> <!-- Fb 1 -->
        <light id="L1"/>
      </aspect>
      <aspect name="Ausführung 40" short="Fb2" long="Fahrbegriff 2"> <!-- Fb 2 -->
        <light id="L1"/>
        <light id="L3"/>
      </aspect>
      <aspect name="Kurze Fahrt" short="Fb6" long="Fahrbegriff 6"> <!-- Fb 6 -->
        <light id="L1"/>
        <light id="L3"/>
      </aspect>
    </aspects>
  </signal>

  <signal country="ch" name="CH-L-Hauptsignal-4L" svg="CH-L-Hauptsignal-4L.svg" outline="M -100,850 L 100,850 L 200,750 L 200,-750 L 100,-850 L -100,-850 L -200,-750 L -200,750 Z" outlineColor="#000000">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="600" color="green" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L2" x="0" y="200" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L3" x="0" y="-200" color="yellow" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
      <lightbulb id="L4" x="0" y="-600" color="green" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>
    </lightbulbs>
    <aspects>
      <aspect name="Halt" short="Halt" long="Halt">
        <light id="L2"/>
      </aspect>
      <aspect name="Freie Fahrt" short="Fb1" long="Fahrbegriff 1"> <!-- Fb 1 -->
        <light id="L1"/>
      </aspect>
      <aspect name="Ausführung 40" short="Fb2" long="Fahrbegriff 2"> <!-- Fb 2 -->
        <light id="L1"/>
        <light id="L3"/>
      </aspect>
      <aspect name="Ausführung 60" short="Fb3" long="Fahrbegriff 3"> <!-- Fb 3 -->
        <light id="L1"/>
        <light id="L4"/>
      </aspect>
      <aspect name="Kurze Fahrt" short="Fb6" long="Fahrbegriff 6"> <!-- Fb 6 -->
        <light id="L1"/>
