        <light id="M_8" blink="true"/>
      </aspect>
       <aspect name="Geel + 6" short="Geel6" long="Geel met 60 km/h">
        <light id="L_Yellow"/>
        <light id="M_6"/>
      </aspect>
      <aspect name="Geel" short="Geel" long="Geel">
