      <!-- 6 -->
      <lightbulb id="M_6" x="0" y="-800" color="yellow" d="M -50,80 L 50,80 L 50,60 L -30,60 L -30,10 L 50,10 L 50,-80 L -50,-80 Z M -30,-10 L -30,-60 L 30,-60 L 30,-10 Z"/>

    </lightbulbs>
    <aspects>
      <aspect name="Groen" short="Groen" long="Groen">
        <light id="L_Green"/>
      </aspect>
      <aspect name="Groen + 13" short="Groen13" long="Groen met 130 km/h">
        <light id="L_Green"/>
        <light id="M_13"/>
      </aspect>
      <aspect name="Groen knipper" short="GroenK" long="Groen knipper">
        <light id="L_Green" blink="true"/>
      </aspect>
      <aspect name="Geel + 8 knipper" short="Geel8K" long="Geel met 80 km/h knipper">
