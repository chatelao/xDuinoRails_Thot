      <lightbulb id="L_Red" x="0" y="-400" color="red" d="m -100, 0 a 100,100 0 1,0 200,0 a 100,100 0 1,0 -200,0"/>

      <!-- Matrix numbers (approx y=-800) -->
      <!-- 13: "1" centered at x=-70, "3" centered at x=70 -->
      <!-- Digit 1: Block from x=-80 to -60, y=-80 to 80 -->
      <!-- Digit 3: Blocky 3 -->
      <lightbulb id="M_13" x="0" y="-800" color="yellow" d="M -80,-80 L -80,80 L -60,80 L -60,-80 Z M 40,80 L 100,80 L 100,60 L 60,60 L 60,10 L 90,10 L 90,-10 L 60,-10 L 60,-60 L 100,-60 L 100,-80 L 40,-80 L 40,-60 L 80,-60 L 80,-10 L 60,-10 L 60,10 L 80,10 L 80,60 L 40,60 Z"/>

      <!-- 8 -->
