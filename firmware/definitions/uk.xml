<?xml version="1.0" encoding="UTF-8"?>
<signalDefinitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="signals.xsd">
  <signal country="uk" name="UK-Colour-Light-Signal-4-Aspect" svg="UK-Colour-Light-Signal-4-Aspect.svg">
    <lightbulbs>
      <lightbulb id="L1" x="0" y="30" color="yellow"/>
      <lightbulb id="L2" x="0" y="20" color="green"/>
      <lightbulb id="L3" x="0" y="10" color="yellow"/>
      <lightbulb id="L4" x="0" y="0" color="red"/>
    </lightbulbs>
    <aspects>
      <aspect name="Clear">
        <light id="L2"/>
      </aspect>
      <aspect name="Preliminary caution">
        <light id="L1"/>
        <light id="L3"/>
      </aspect>
      <aspect name="Caution">
        <light id="L3"/>
      </aspect>
      <aspect name="Danger">
        <light id="L4"/>
      </aspect>
    </aspects>
  </signal>
  <signal country="uk" name="UK-Ground-Position-Light" svg="UK-Ground-Position-Light.svg">
    <lightbulbs>
      <lightbulb id="L1" x="-50" y="0" color="red"/>    <!-- Left Red -->
      <lightbulb id="L2" x="50" y="0" color="red"/>     <!-- Right Red -->
      <lightbulb id="L3" x="-50" y="0" color="white"/>  <!-- Left White (Pivot) -->
      <lightbulb id="L4" x="50" y="100" color="white"/> <!-- Top Right White -->
    </lightbulbs>
    <aspects>
      <aspect name="Danger">
        <light id="L1"/>
        <light id="L2"/>
      </aspect>
      <aspect name="Proceed">
        <light id="L3"/>
        <light id="L4"/>
      </aspect>
    </aspects>
  </signal>
</signalDefinitions>
